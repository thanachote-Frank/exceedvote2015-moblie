# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET         /                      controllers.Application.index()
GET         /main_menu                          controllers.Application.mainMenu()

GET         /team_list                          controllers.Application.teamList()

POST        /                                   controllers.Application.login()
GET         /                                   controllers.Application.login()

GET         /team/:teamID                       controllers.Application.team(teamID: Long)
POST        /register                           controllers.Application.regis()
GET         /register                           controllers.Application.regis()

POST        /create_team                        controllers.Application.createTeam()
GET         /create_team                        controllers.Application.createTeam()

POST        /edit_description                   controllers.Application.editDescription()
GET         /edit_description                   controllers.Application.editDescription()

POST        /rating2                            controllers.Application.ratingPost()
GET         /rating/:teamID                     controllers.Application.rating(teamID: String)

GET         /logout                             controllers.Application.logout()

POST        /upload_logo                        controllers.Application.uploadLogo()
GET         /upload_logo                        controllers.Application.uploadLogo()

POST        /upload_screenshot                  controllers.Application.uploadScreenshot()
GET         /upload_screenshot                  controllers.Application.uploadScreenshot()

GET         /rating_result                      controllers.Application.ratingResult()

POST        /upload_screenshot/deleteAll        controllers.Application.deleteAllScreenshot()

GET         /admin/home                         controllers.Admin.home()

POST        /admin/setting                      controllers.Admin.setting()
GET         /admin/setting                      controllers.Admin.setting()

POST        /admin/setup_features               controllers.Admin.setupFeatures()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.at(path="/public", file)